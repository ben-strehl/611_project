CC = g++

CFLAGS = -g -Wall

all: float_add float_div float_mult float_sub int_add int_div int_mult int_sub

float_add: float/addition.cpp
	$(CC) $(CFLAGS) -o float/addition float/addition.cpp

float_div: float/division.cpp
	$(CC) $(CFLAGS) -o float/division float/division.cpp

float_mult: float/multiplication.cpp
	$(CC) $(CFLAGS) -o float/multiplication float/multiplication.cpp

float_sub: float/subtraction.cpp
	$(CC) $(CFLAGS) -o float/subtraction float/subtraction.cpp

int_add: int/addition.cpp
	$(CC) $(CFLAGS) -o int/addition int/addition.cpp

int_div: int/division.cpp
	$(CC) $(CFLAGS) -o int/division int/division.cpp

int_mult: int/multiplication.cpp
	$(CC) $(CFLAGS) -o int/multiplication int/multiplication.cpp

int_sub: int/subtraction.cpp
	$(CC) $(CFLAGS) -o int/subtraction int/subtraction.cpp